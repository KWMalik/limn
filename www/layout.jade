include mixins/helpers
include mixins/forms

!!! html
html
    head
        block head
            meta(http-equiv="content-type", content="text/html; charset=utf-8")
            
            block styles
                link(type='text/css', rel='stylesheet', media='screen', href='/css/reset.min.css')
                mixin css('layout.css')
            
            link(type="image/ico", rel="icon", href="/favicon.ico")
            link(type="image/x-icon", rel="shortcut icon", href="/favicon.ico")
            
            block title
                title Kraken
    
    body
        block body
            header
                block header
                    h1: a(href="/") Kraken
                    block nav
                        nav#menu: ul
                            block menu-items
                                li.home Home
            
            section#content
                .spacer
                
                block content
            
            footer
                block footer
            
            .scripts
                block scripts
                    script
                        var VERSION = !{ JSON.stringify(version)  };
                        var ENV     = !{ JSON.stringify(NODE_ENV) };
                    
                    if IS_PROD
                        script(src='/vendor/lib-bundle.min.js?'+version)
                        script(src='/js/kraken/app-bundle.min.js?'+version)
                    else
                        for src in sources(WWW+'/modules.yaml')
                            script(src=src+"?"+version)
                    
                    block page-scripts
                    
                    script(src="/js/kraken/main.js?"+version)
            

