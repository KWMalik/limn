@import 'nib'
@import 'colors'

section.graph
    .graph-label
        position relative
    
    .viewport
        position relative
        min-width 200px
        min-height 100px
    
    form.details
        position relative
    
    fieldset.options
        legend
            position relative
    
    .field.option
        padding 0.5em
        margin 0.5em
        width 200px
        min-height 2em
        
        .shortname
            display none
        .value
            position relative
        .type
            position relative
        .default
            position relative
        .desc
            position relative
        .tags
            .tag
                position relative
        .examples
            .example
                position relative
        
        
        &.collapsed
            float left
            min-width 2em
            min-height 2em
            background-color #ccc
            
            *
                display none
            .shortname
                display inline
            
