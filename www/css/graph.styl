@import 'nib'
@import 'colors'

section.graph
    .graph-label
        position relative
    
    .viewport
        position relative
        min-width 200px
        min-height 100px
    
    form.details
        position relative
    
    fieldset.options
        border-radius 5px
        legend
            width auto
            display inline-block
    
    .field.option
        float left
        padding 0.5em
        margin 0.5em
        width 200px
        min-height 2em
        overflow hidden
        
        border-radius 5px
        background-color #ccc
        font-size 90%
        
        .close
            z-index 10
            absolute top 0.5em right 0.5em
            width 1em
            height 1em
            
            opacity 1
            color rgba(51,51,51, 0.4)
            text-align center
            border 1px solid #afafaf
            border-radius 50%
            background-color #ccc
            
            text-decoration none
            cursor pointer
        
        .close:hover
            color rgba(51,51,51, 1)
            border 1px solid #999
        
        .shortname
            z-index -1
            absolute bottom 0.5em right 0.5em
            font-weight bold
            color white
        .name
            font-weight bold
            line-height 1.5
            font-size 100%
        .value
            width auto
        .type
            &::before
                content "Type: "
        .default
            &::before
                content "Default: "
        .desc
            position relative
        .tags
            &::before
                content "Tags"
            ul
                display none
            .tag
                position relative
        .examples
            &::before
                content "Examples"
            .example
                position relative
        
        
        &.collapsed
            width auto
            min-width 50px
            min-height 2em
            line-height 2em
            text-align center
            
            *
                display none
            .shortname
                display inline
                position static
        
